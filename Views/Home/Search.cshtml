@model List<GharibFood.ViewModels.ReceitaViewModel>

@{
    ViewData["Title"] = "Salgado";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/GharibFood.styles.css" asp-append-version="true" />

<body class="body-home">
        <div class="categorias">
            <div class="botao-categoria"> <a href="/Home/Salgado"><button>Salgado</button></a></div>
            <div class="botao-categoria"> <a href="/Home/Doce"><button>Doce</button></a></div>
        </div>

        <h1>Exibindo resultados para "@ViewBag.textBusca"</h1>

        <div class="menu-receitas">

            @foreach (var receita in Model)
            {
                if(receita.Nome == @ViewBag.textBusca)
                {
                    <a href="#">
                    <div class="bloco-receita">
                        <img src=@receita.CaminhoFoto alt=@receita.DescAlt class="img-link-receita">
                        <div class="info">
                            <p>@receita.Categoria</p>
                            <h3>@receita.Nome</h3>
                        </div>
                    </div>
                    </a>
                }
            }
            
        </div>
    </body>